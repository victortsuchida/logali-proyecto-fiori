<mvc:View xmlns:appfinder="sap.ushell.ui.appfinder" controllerName="logaligroup.employee.controller.EmployeeDetails" 
          xmlns:mvc="sap.ui.core.mvc"  
          displayBlock="true"
          xmlns="sap.m"
          xmlns:core="sap.ui.core">
    <Page id="_IDGenPage2" title="{i18n>employeeDetails}">
        <Panel id="_IDGenPanel1">
            <FlexBox id="_IDGenFlexBox1" height="65px" alignItems="Center" justifyContent="Center">
                <items>
                    <Text id="_IDGenText1" text="{odataNorthwind>LastName}, {odataNorthwind>FirstName}" class="boldText"/>
                </items>
            </FlexBox>

            <FlexBox id="_IDGenFlexBox2" height="65px" alignItems="Start" justifyContent="SpaceBetween">
                <items>
                    <VBox id="_IDGenVBox1" >
                        <Text id="_IDGenText2" text="{i18n>employeeID}" class="boldText"/>
                        <Text id="_IDGenText3" text="{odataNorthwind>EmployeeID}" />
                    </VBox>

                    <VBox id="_IDGenVBox2" >
                        <Text id="_IDGenText4" text="{i18n>title}" class="boldText"/>
                        <Text id="_IDGenText5" text="{odataNorthwind>Title}" />
                    </VBox>
                </items>
            </FlexBox>

            <FlexBox id="_IDGenFlexBox3" alignItems="Start">
                <items>
                    <HBox id="_IDGenHBox1" >
                        <Text id="_IDGenText6" text="{i18n>countryCode}" class="boldText sapUiTinyMarginEnd" />
                        <Text id="_IDGenText7" text="{odataNorthwind>Country}"/>
                        <layoutData>
                            <FlexItemData id="_IDGenFlexItemData1" growFactor="3" />
                        </layoutData>
                    </HBox>

                    <HBox id="_IDGenHBox2" >
                        <Text id="_IDGenText8" text="{i18n>city}" class="boldText sapUiTinyMarginEnd" />
                        <Text id="_IDGenText9" text="{odataNorthwind>City}"/>
                        <layoutData>
                            <FlexItemData id="_IDGenFlexItemData2" growFactor="2" />
                        </layoutData>
                    </HBox>
                    
                    <HBox id="_IDGenHBox3" >
                        <Text id="_IDGenText10" text="{i18n>postalCode}" class="boldText sapUiTinyMarginEnd" />
                        <Text id="_IDGenText11" text="{odataNorthwind>PostalCode}"/>
                        <layoutData>
                            <FlexItemData id="_IDGenFlexItemData3" growFactor="1" />
                        </layoutData>
                    </HBox>                                
                </items>
            </FlexBox>
        </Panel>

        <Panel id="_IDGenPanel2">
            <headerToolbar>
                <Toolbar id="_IDGenToolbar1">
                    <Title id="_IDGenTitle1" text="{i18n>incidence} {= ${odataNorthwind>Country} === 'US' ? ${i18n>unitedStates} :
                                                                       ${odataNorthwind>Country} === 'ES' ? ${i18n>spain} :
                                                                       ${odataNorthwind>Country} === 'UK' ? ${i18n>unitedKingdom} : '' }" />
                    <ToolbarSpacer id="_IDGenToolbarSeparator1" />
                    <Button id="_IDGenButton1" text="{i18n>createIncidence}" press="onCreateIncidence"/>
                </Toolbar>
            </headerToolbar>                                          
            <Panel id="tableIncidence" class="sapUiNoContentPadding" backgroundDesign="Transparent" />
        </Panel>
    </Page>
</mvc:View>