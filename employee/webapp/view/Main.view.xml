<mvc:View controllerName="logaligroup.employee.controller.Main"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:f="sap.f"
          xmlns:core="sap.ui.core"  >
    
    <Shell id="shell">
		<App id="app">
			<pages>
                <Page id="_IDGenPage1" showHeader="false">
                    <content>
                        <f:FlexibleColumnLayout id="_IDGenFlexibleColumnLayout1" layout="{layout>/ActiveKey}">
                            <f:beginColumnPages>
                                <mvc:XMLView id="_IDGenXMLView1" viewName="logaligroup.employee.view.MasterEmployee"></mvc:XMLView>
                            </f:beginColumnPages>

                            <f:midColumnPages>
                                <mvc:XMLView id="_IDGenXMLView2" viewName="logaligroup.employee.view.EmployeeDetails"></mvc:XMLView>
                            </f:midColumnPages>

                            <f:endColumnPages>
                                
                            </f:endColumnPages>
                        </f:FlexibleColumnLayout>
                    </content>
                    <footer>
                        <Toolbar id="_IDGenToolbar1">
                            <Label id="_IDGenLabel1" text="{i18n>layout}" class="sapUiSmallMargin" />
                            <Select id="_IDGenSelect2" items="{layout>/Layout}" selectedKey="{layout>/ActiveKey}">
                                <core:Item id="_IDGenItem1" text="{layout>Text}" key="{layout>Key}"/>
                            </Select>
                        </Toolbar>
                    </footer>
                </Page>
        	</pages>
		</App>
	</Shell>
</mvc:View>