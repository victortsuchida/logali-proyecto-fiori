<mvc:View
    controllerName="logaligroup.employee.controller.MasterEmployee"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Panel id="_IDGenPanel1" class="sapUiResponsiveMargin">
                <content>
                    <Label id="_IDGenLabel1" text="{i18n>employeeLabel}" labelFor="_IDGenInput1" class="sapUiSmallMarginEnd"/>
                    <Input id="_IDGenInput1" width="15%" class="sapUiSmallMarginEnd" valueLiveUpdate="true" value="{employee>/EmployeeId}"/>
                    <Label id="_IDGenLabel2" text="{i18n>countryLabel}" labelFor="_IDGenSelect1" class="sapUiSmallMarginEnd" visible="{selectVisibility>/visibility}"/>
                    <Select id="_IDGenSelect1" forceSelection="false" items="{contries>/ListCountry}" class="" visible="{selectVisibility>/visibility}" selectedKey="{contries>/CountryKey}">
                        <core:Item id="_IDGenItem1" key="{contries>Key}" text="{contries>Text}" />
                    </Select>
                    <Button id="_IDGenButton1" text="{i18n>filterBtn}" icon="sap-icon://search" class="sapUiSmallMarginEnd" press=".onFilter"/>
                    <Button id="_IDGenButton2" text="{i18n>filterClrBtn}" icon="sap-icon://clear-filter" class="" press=".onClearFilter" />
                    <Button id="_IDGenButton3" text="{i18n>showCity}" press=".onShowCity" visible="{= ${selectVisibility>/showCityColumn} === false}"/>
                    <Button id="_IDGenButton4" text="{i18n>hideCity}" press=".onHideCity" visible="{selectVisibility>/showCityColumn}"/>            
                </content>
            </Panel>                    
            <core:Fragment fragmentName="logaligroup.employee.fragment.TableEmployee" type="XML"/>
        </content>
    </Page>
		
</mvc:View>
