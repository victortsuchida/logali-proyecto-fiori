<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Panel>
        <headerToolbar>
            <Toolbar>
                <core:Icon src="{= ${incidenceModel>Type} === '0' ? 'accept' :
                                   ${incidenceModel>Type} === '1' ? 'alert' :
                                   ${incidenceModel>Type} === '2' ? 'decline' : '' }" />
                <Title text="{i18n>incidence} {= ${incidenceModel>IncidenceId} ? parseInt(${incidenceModel>IncidenceId}) : '' } 
                             { path: 'incidenceModel>CreationDate', formatter: '.Formatter.dateFormat' }"/>
                <ToolbarSpacer />
                <Button icon="sap-icon://save" press=".onSaveDataIncidence"/>
                <Button icon="sap-icon://delete" press=".onDeleteIncidence"/>
            </Toolbar>
        </headerToolbar>
        <content>
            <HBox>
                <VBox class="sapUiSmallMarginEnd">
                    <Text text="{i18n>incidenceDate}"/>
                    <DatePicker dateValue="{incidenceModel>CreationDate}" change="updateIncidenceCreationDate"/>
                </VBox>

                <VBox visible="{= ${incidenceModel>CreationDate} !== '' &amp;&amp; ${incidenceModel>CreationDate} !== undefined}" class="sapUiSmallMarginEnd">
                    <Text text="{i18n>reason}"/>
                    <Input value="{incidenceModel>Reason}" change="updateIncidenceReason"/>
                </VBox>

                <VBox visible="{= ${incidenceModel>CreationDate} !== '' &amp;&amp; ${incidenceModel>CreationDate} !== undefined}" class="sapUiSmallMarginEnd">
                    <Text text="{i18n>type}"/>
                    <Select forceSelection="false" selectedKey="{incidenceModel>Type}" change="updateIncidenceType">
                        <core:Item key="0" text="{i18n>correct}"/>
                        <core:Item key="1" text="{i18n>pending}"/>
                        <core:Item key="2" text="{i18n>error}"/>
                    </Select>
                </VBox>                                
            </HBox>
        </content>
    </Panel>
</core:FragmentDefinition>